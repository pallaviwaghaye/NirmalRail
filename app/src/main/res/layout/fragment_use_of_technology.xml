<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

    <TextView
        android:id="@+id/textViewHeading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Use of technology in Nirmal Rail App"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageViewImage1"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:src="@drawable/machine1"

            />
        <TextView
            android:id="@+id/textViewText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="All types of machines"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:background="@color/divider_color"/>

        <ImageView
            android:id="@+id/imageViewImage2"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:src="@drawable/machine2"

            />
        <TextView
            android:id="@+id/textViewText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Rag Picking on tracks"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:background="@color/divider_color"/>


        <ImageView
            android:id="@+id/imageViewImage3"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:src="@drawable/machine3"

            />
        <TextView
            android:id="@+id/textViewText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Ride on Scrubber Machine"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:background="@color/divider_color"/>



        <ImageView
            android:id="@+id/imageViewImage4"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:src="@drawable/machine4"

            />
        <TextView
            android:id="@+id/textViewText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Ride on Scrubber Machine2"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp" />


    </LinearLayout>
    </ScrollView>
</RelativeLayout>